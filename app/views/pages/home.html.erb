<div class="row">
  <div class="col-md-12 banner text-center">
    <h1><span class="text-blue">Book and rent a bounce house</span> simple and easy.</h1>
  </div>

  <div class="col-md-12"><h4>Search for a bounce house in your neighborhood</h4></div>
</div>


  <div class="row">
    <div class="col-md-6">
      <%= form_tag search_path, method: :get do %>

      <%= text_field_tag :search, params[:search], placeholder: "Search Bounce Houses", class: "form-control", id: "autolocation" %>
    </div>&nbsp;

    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-form btn-block" %>
    </div>
  </div>

<% end %>

<br>

<!-- BOUNCE HOUSES -->
<div class="text-center"><h2>Bounce Houses Near You</h2>
  <p>Book and rent a bounce house</p>
</div>
<br/>

<div class="row">
  <%= render partial: "bouncehouses/bouncehouses_list", locals: {bouncehouses: @bouncehouses} %>
</div>

